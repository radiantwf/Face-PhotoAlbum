<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="TipsLabel" TargetType="Control">
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,5,0"/>
        <Setter Property="FontSize" Value="18"/>
    </Style>
    <Style x:Key="InputBox" TargetType="Control">
        <Setter Property="Margin" Value="0,5,0,5"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>
    <Style x:Key="CommandPanel" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Margin" Value="0,10"/>
    </Style>
    <Style x:Key="LoginCommand" TargetType="Button">
        <Setter Property="Width" Value="80"/>
        <Setter Property="Margin" Value="0,0,10,0"/>
        <Setter Property="FontSize" Value="18"/>
    </Style>
    <Style x:Key="CloseCommand" TargetType="Button">
        <Setter Property="Width" Value="80"/>
        <Setter Property="FontSize" Value="18"/>
    </Style>
</ResourceDictionary>